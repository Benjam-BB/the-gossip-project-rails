<html>
<body>

    <% if @gossip.errors.any? %>
    <div class="alert alert-danger" role="alert">
        <p>Nous n'avons pas réussi à créer le potin pour la(les) raison(s) suivante(s) :</p>
        <ul>
            <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>
    <% end %>
    <div class="row d-flex justify-content-center">
    <h1> Créer ton Gossip</h1>
    <div class="container d-flex justify-content-center">
        <%= form_tag url_for(action: 'create'), method: "post" do %>
        <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >        <br /> 
            <div><%= label_tag 'Le titre' %></div>
            <div><%= text_field_tag 'gossip_title' %></div>
            <br /> 
            <div><%= label_tag 'Dis nous tout' %></div>
            <div><%= text_field_tag 'gossip_content'%></div>
            
            
            <br /> <br />
            <%= submit_tag "Valider", class: 'btn btn-primary btn-lg btn-submit'  %>
        <% end %>
    </div>
    </div>
</form>
</body>
</html>
